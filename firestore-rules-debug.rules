rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can read and write their own statistics
    match /userStats/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Games - More permissive for now
    match /games/{gameId} {
      allow read, write: if request.auth != null;
    }
    
    // Lobbies - Allow all operations for authenticated users
    match /lobbies/{lobbyId} {
      allow read, write, create, update, delete: if request.auth != null;
    }
    
    // Lobby actions - Allow all operations for authenticated users
    match /lobbies/{lobbyId}/actions/{actionId} {
      allow read, write, create: if request.auth != null;
    }
    
    // Public read access to leaderboards
    match /leaderboards/{document=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}